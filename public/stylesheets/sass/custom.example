#posts
  :text-align left
  
  .post
    :margin-bottom 15px

ul.pager
  :text-align center
  :font-size 1.1em
  li
    :display inline
    :margin-right 5px
  li.active
    a
      :text-decoration none

.admin
  :padding 3px 5px
  :margin 5px 0
  :border 1px solid #aaa
  :background #eee
  
#sidebar
  :text-align left

  .sidebarbox
    :margin-bottom 10px
    
    h4
      :margin-bottom 3px
      :border-bottom 1px dotted #333
    
    p
      :padding-left 2px
      
    ul, li
      :margin-left 2px
      :list-style-type none

.admin-form
  dd
    :margin-bottom 10px
