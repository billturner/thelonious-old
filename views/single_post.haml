%div.post
  %h3
    =link_to post.title, permalink_url(post), { :rel => "bookmark", :title => "Permanent link for this post"}
  %div.postbody 
    =find_and_preserve do
      =markdown(post.body)
  %div.meta
    =post.published_at.strftime('%Y-%m-%d %I:%M%p')
    -if post.tags.count > 0
      &mdash;
      -post.tags.each do |tag|
        =link_to "##{tag.name}", tag_url(tag), { :rel => "category tag", :title => "View other posts tagged with '#{tag.name}'"}
