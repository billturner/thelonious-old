%h2= @page_title

=error_messages_for(@post)

-form_for @post, (creation_form? ? "/new_post" : "/edit_post/#{@post.id}"), :method => 'POST', :class => "admin-form" do |f|
  %dl
    %dt
      =f.label :title, :caption => "Post Title"
    %dd
      =f.text_field :title, :value => @post.title, :size => 50
    %dt
      =f.label :body, :caption => "Post Body"
    %dd
      =find_and_preserve do
        =f.text_area :body
    %dt
      =f.label :tags, :caption => "Tags"
    %dd
      =f.text_field :tags, :value => @post.tags.join(", "), :size => 50
    %dt
      =f.label :published, :caption => "Publish?"
    %dd
      =f.check_box :published
      Yes
    %dt
      =f.submit "Submit"
